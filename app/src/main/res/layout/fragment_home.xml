<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pale_blue"
    tools:context=".fragment.HomeFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/user_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.circleImageView"
        android:src="@drawable/logo"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/txt0"
        android:text="Xin chào, "
        android:textColor="@color/dark_blue"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/user_avatar"
        app:layout_constraintTop_toTopOf="@id/user_avatar"
        app:layout_constraintBottom_toBottomOf="@id/user_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/user_name"
        app:layout_constraintStart_toEndOf="@id/txt0"
        app:layout_constraintTop_toTopOf="@id/txt0"
        android:text="Xuân Hữu"
        android:textSize="18sp"
        android:textColor="@color/dark_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt1"
        android:text="Giữ tư thế thẳng, sống khỏe hơn."
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/user_avatar"
        app:layout_constraintStart_toStartOf="@id/user_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imgSetting"
        app:tint="@color/purple"
        android:src="@drawable/account"
        app:layout_constraintTop_toTopOf="@id/user_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/user_avatar"
        android:layout_marginEnd="20dp"
        android:layout_width="26dp"
        android:layout_height="26dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardStatusPosture1"
        android:background="@drawable/bg_retangle_radius"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/robot"
            app:tint="@color/purple"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_width="28dp"
            android:layout_height="28dp"/>

        <TextView
            android:id="@+id/txt2"
            android:text="Tên thiết bị: "
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/bot_name"
            android:text="Bot A123"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"
            app:layout_constraintStart_toEndOf="@id/txt2"
            app:layout_constraintTop_toTopOf="@id/txt2"
            app:layout_constraintBottom_toBottomOf="@id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt3"
            android:text="Trạng thái: "
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            app:layout_constraintTop_toBottomOf="@id/txt2"
            app:layout_constraintStart_toStartOf="@id/txt2"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/bot_status"
            android:text="Đang hoạt động"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"
            app:layout_constraintStart_toEndOf="@id/txt3"
            app:layout_constraintTop_toTopOf="@id/txt3"
            app:layout_constraintBottom_toBottomOf="@id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imgStatusBot"
            android:src="@drawable/circle"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            app:tint="@color/green"
            app:layout_constraintStart_toEndOf="@id/bot_status"
            app:layout_constraintBottom_toBottomOf="@id/bot_status"
            app:layout_constraintTop_toTopOf="@id/bot_status"
            android:layout_width="12dp"
            android:layout_height="12dp"/>

        <TextView
            android:id="@+id/txt4"
            android:text="Cập nhật gần nhất: "
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            app:layout_constraintTop_toBottomOf="@id/txt3"
            app:layout_constraintStart_toStartOf="@id/txt3"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/bot_time_update"
            android:text="5 phút trước"
            android:textSize="18sp"
            android:textColor="@color/dark_blue"
            app:layout_constraintStart_toEndOf="@id/txt4"
            app:layout_constraintTop_toTopOf="@id/txt4"
            app:layout_constraintBottom_toBottomOf="@id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardStatusPosture2"
        android:background="@drawable/bg_retangle_radius"
        app:layout_constraintTop_toBottomOf="@id/cardStatusPosture1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <ImageView
            android:src="@drawable/sit"
            app:tint="@color/purple"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

        <TextView
            android:id="@+id/txtNullData"
            android:text="Chưa có dữ liệu"
            android:textSize="20sp"
            android:textColor="@color/dark_blue"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/layout3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/circle"
                app:tint="@color/red"
                android:layout_marginEnd="5dp"
                android:layout_width="12dp"
                android:layout_height="12dp"/>

            <TextView
                android:text="Xấu"
                android:textSize="18sp"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/circle"
                app:tint="@color/purple"
                android:layout_marginEnd="5dp"
                android:layout_width="12dp"
                android:layout_height="12dp"/>

            <TextView
                android:text="Tốt"
                android:textSize="18sp"
                android:textColor="@color/purple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/circle"
                app:tint="@color/yellow"
                android:layout_marginEnd="5dp"
                android:layout_width="12dp"
                android:layout_height="12dp"/>

            <TextView
                android:text="Cảnh báo"
                android:textSize="18sp"
                android:textColor="@color/yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardStatusPosture3"
        android:background="@drawable/bg_retangle_radius"
        app:layout_constraintTop_toBottomOf="@id/cardStatusPosture2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:src="@drawable/head"
            app:tint="@color/purple"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="22dp"
            android:layout_height="22dp"/>

        <ImageView
            android:id="@+id/imgPostureIcon"
            android:src="@drawable/correct_posture"
            app:tint="@color/purple"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <LinearLayout
            android:id="@+id/layout4"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_oval"
            android:padding="20dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Độ tin cậy"
                android:textColor="@color/dark_blue"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/confidence"
                android:text="90%"
                android:textSize="22sp"
                android:textColor="@color/dark_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_oval"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layout4"
            app:layout_constraintStart_toEndOf="@+id/imgPostureIcon"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Góc cổ"
                android:textStyle="bold"
                android:textColor="@color/dark_blue"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/neck_angle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18°"
                android:textColor="@color/dark_blue"
                android:textSize="22sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtQuickFeedback"
            android:text="Quick Feedback"
            android:textStyle="italic"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/imgPostureIcon"
            app:layout_constraintStart_toStartOf="@id/imgPostureIcon"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:src="@drawable/circle"
        app:layout_constraintTop_toBottomOf="@id/cardStatusPosture3"
        app:layout_constraintBottom_toTopOf="@id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/white"
        android:layout_width="28sp"
        android:layout_height="28sp"/>

    <View
        android:id="@+id/view"
        android:background="@drawable/bg_bottom_navigation"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>