<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pale_blue"
    tools:context=".fragment.HistoryFragment">

    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="-40dp"
                android:text="Lịch sử"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:textSize="28sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                app:layout_constraintStart_toEndOf="@id/txt0"
                app:layout_constraintTop_toTopOf="@id/txt0"
                app:layout_constraintBottom_toBottomOf="@id/txt0"
                app:tint="@color/dark_blue"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/history"
                android:layout_width="28dp"
                android:layout_height="28dp"/>

            <LinearLayout
                android:id="@+id/layout1"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/txt0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="14dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtDay"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="Ngày"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_retangle_radius_selector"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintTop_toBottomOf="@id/txt0"
                    app:layout_constraintStart_toStartOf="@id/txt0"
                    android:textColor="@color/text_color_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtWeek"
                    android:layout_weight="1"
                    android:text="Tuần"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_retangle_radius_selector"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:textAlignment="center"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintTop_toBottomOf="@id/txt0"
                    app:layout_constraintStart_toStartOf="@id/txt0"
                    android:textColor="@color/text_color_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtMonth"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="Tháng"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:background="@drawable/bg_retangle_radius_selector"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintTop_toBottomOf="@id/txt0"
                    app:layout_constraintStart_toStartOf="@id/txt0"
                    android:textColor="@color/text_color_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout2"
                android:layout_marginTop="20dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:paddingBottom="20dp"
                android:background="@drawable/bg_retangle_radius"
                app:layout_constraintTop_toBottomOf="@id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/layout7"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/barChart"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <com.kizitonwose.calendar.view.CalendarView
                        android:id="@+id/calendar"
                        android:visibility="gone"
                        app:cv_orientation="vertical"
                        app:cv_dayViewResource="@layout/layout_day_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout6"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/layout7"
                    app:layout_constraintStart_toStartOf="@id/layout7"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgBack"
                        android:src="@drawable/previous"
                        app:tint="@color/purple"
                        android:layout_marginEnd="10dp"
                        android:layout_width="36dp"
                        android:layout_height="36dp"/>

                    <ImageView
                        android:id="@+id/imgNext"
                        android:src="@drawable/next"
                        app:tint="@color/light_gray"
                        android:layout_width="36dp"
                        android:layout_height="36dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtDuration"
                    android:text="Hôm nay"
                    android:textColor="@color/dark_blue"
                    android:textSize="22sp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toEndOf="@id/layout6"
                    app:layout_constraintTop_toTopOf="@id/layout6"
                    app:layout_constraintBottom_toBottomOf="@id/layout6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutSession"
                android:visibility="gone"
                android:padding="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/bg_retangle_radius"
                app:layout_constraintTop_toBottomOf="@id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img1"
                    android:src="@drawable/clock"
                    app:tint="@color/purple"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="26dp"
                    android:layout_height="26dp"/>

                <TextView
                    android:id="@+id/hourDuration"
                    android:text="9:00 - 10:00"
                    android:textColor="@color/dark_blue"
                    android:textSize="22sp"
                    android:layout_marginStart="14dp"
                    app:layout_constraintStart_toEndOf="@id/img1"
                    app:layout_constraintTop_toTopOf="@id/img1"
                    app:layout_constraintBottom_toBottomOf="@id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/timelineContainer"
                    app:layout_constraintStart_toEndOf="@id/hourDuration"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/hourDuration"
                    app:layout_constraintBottom_toBottomOf="@id/hourDuration"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_timeline_track"
                    android:clipToPadding="false"
                    android:padding="1dp" />

                <LinearLayout
                    android:id="@+id/layout4"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_oval"
                    android:padding="20dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/img1"
                    app:layout_constraintStart_toStartOf="@id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Tốt"
                        android:textColor="@color/dark_blue"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/goodDuration"
                        android:text="40m"
                        android:textSize="24sp"
                        android:textColor="@color/purple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout5"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_oval"
                    android:padding="20dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toTopOf="@id/layout4"
                    app:layout_constraintStart_toEndOf="@id/layout4"
                    app:layout_constraintBottom_toBottomOf="@id/layout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Xấu"
                        android:textColor="@color/dark_blue"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/badDuration"
                        android:text="20m"
                        android:textSize="24sp"
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout8"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_oval"
                    android:padding="20dp"
                    android:layout_marginStart="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/layout5"
                    app:layout_constraintStart_toEndOf="@id/layout5"
                    app:layout_constraintBottom_toBottomOf="@id/layout5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Đánh giá"
                        android:textColor="@color/dark_blue"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtJudgement"
                        android:ems="3"
                        android:textAlignment="center"
                        android:text="Tốt"
                        android:textSize="24sp"
                        android:textColor="@color/dark_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/layout3"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                app:layout_constraintTop_toBottomOf="@id/layoutSession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutSummaryDay"
                    android:padding="20dp"
                    android:visibility="visible"
                    android:background="@drawable/bg_retangle_radius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/chip0"
                        android:orientation="horizontal"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:background="@drawable/bg_retangle_radius"
                        android:backgroundTint="@color/pale_blue"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/circle"
                            app:tint="@color/purple"
                            android:layout_marginEnd="5dp"
                            android:layout_width="12dp"
                            android:layout_height="12dp"/>

                        <TextView
                            android:text="Tốt: "
                            android:textColor="@color/purple"
                            android:textSize="22sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txtGoodDurationDay"
                            android:text="3h36m"
                            android:textSize="22sp"
                            android:textColor="@color/purple"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@drawable/bg_retangle_radius"
                        android:backgroundTint="@color/pale_blue"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/circle"
                            app:tint="@color/red"
                            android:layout_marginEnd="5dp"
                            android:layout_width="12dp"
                            android:layout_height="12dp"/>

                        <TextView
                            android:text="Xấu: "
                            android:textColor="@color/red"
                            android:textSize="22sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txtBadDurationDay"
                            android:text="3h36m"
                            android:textColor="@color/red"
                            android:textSize="22sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutSummaryWeek"
                    android:padding="20dp"
                    android:visibility="gone"
                    android:background="@drawable/bg_retangle_radius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/layoutAvgGoodDay"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_oval"
                        android:padding="20dp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Trung bình"
                            android:textColor="@color/dark_blue"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/avgGoodDay"
                            android:text="3h36p"
                            android:textSize="24sp"
                            android:textColor="@color/purple"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutBestDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_oval"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="20dp"
                        app:layout_constraintBottom_toBottomOf="@id/layoutAvgGoodDay"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/layoutAvgGoodDay"
                        app:layout_constraintTop_toTopOf="@id/layoutAvgGoodDay">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày tốt nhất"
                            android:textColor="@color/dark_blue"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/bestDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MON"
                            android:textColor="@color/purple"
                            android:textSize="24sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutWorstDay"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_oval"
                        android:padding="20dp"
                        app:layout_constraintTop_toBottomOf="@id/layoutAvgGoodDay"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Ngày tệ nhất"
                            android:textColor="@color/dark_blue"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/worstDay"
                            android:text="TUE"
                            android:textSize="24sp"
                            android:textColor="@color/red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutSummaryMonth"
                    android:visibility="gone"
                    android:padding="20dp"
                    android:background="@drawable/bg_retangle_radius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/chipTotalGood"
                        android:orientation="horizontal"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:background="@drawable/bg_retangle_radius"
                        android:backgroundTint="@color/pale_blue"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/circle"
                            app:tint="@color/purple"
                            android:layout_marginEnd="5dp"
                            android:layout_width="12dp"
                            android:layout_height="12dp"/>

                        <TextView
                            android:text="Tốt: "
                            android:textColor="@color/purple"
                            android:textSize="22sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txtTotalGoodDuration"
                            android:text="3h36m"
                            android:textSize="22sp"
                            android:textColor="@color/purple"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@drawable/bg_retangle_radius"
                        android:backgroundTint="@color/pale_blue"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/circle"
                            app:tint="@color/red"
                            android:layout_marginEnd="5dp"
                            android:layout_width="12dp"
                            android:layout_height="12dp"/>

                        <TextView
                            android:text="Xấu: "
                            android:textColor="@color/red"
                            android:textSize="22sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txtTotalBadDuration"
                            android:text="3h36m"
                            android:textColor="@color/red"
                            android:textSize="22sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/chipBestWeek"
                        android:orientation="horizontal"
                        android:gravity="center"
                        app:layout_constraintTop_toBottomOf="@id/chipTotalGood"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_retangle_radius"
                        android:backgroundTint="@color/pale_blue"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Tuần tốt nhất: "
                            android:textColor="@color/dark_blue"
                            android:textSize="22sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/txtBestWeek"
                            android:text="Tuần 2"
                            android:textColor="@color/dark_blue"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtCompare"
                        android:text="Tốt hơn 65% so với tháng trước"
                        android:textStyle="italic"
                        android:textSize="20sp"
                        android:textColor="@color/dark_blue"
                        android:layout_marginTop="14dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/chipBestWeek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <ImageView
                android:src="@drawable/circle"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/layout3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="@color/white"
                android:layout_width="28sp"
                android:layout_height="28sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/view"
        android:background="@drawable/bg_bottom_navigation"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>