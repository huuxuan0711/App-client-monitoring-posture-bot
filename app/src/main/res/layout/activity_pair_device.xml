<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_blue"
    tools:context=".activity.PairDeviceActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/user_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.circleImageView"
        android:src="@drawable/logo"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/txt0"
        android:text="Xin chào, "
        android:textColor="@color/dark_blue"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/user_avatar"
        app:layout_constraintTop_toTopOf="@id/user_avatar"
        app:layout_constraintBottom_toBottomOf="@id/user_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/user_name"
        app:layout_constraintStart_toEndOf="@id/txt0"
        app:layout_constraintTop_toTopOf="@id/txt0"
        android:text="Xuân Hữu"
        android:textSize="18sp"
        android:textColor="@color/dark_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt1"
        android:text="Chọn thiết bị để kết nối:"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/user_avatar"
        app:layout_constraintStart_toStartOf="@id/user_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/btnAddDevice"
        android:src="@drawable/add"
        app:tint="@color/purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/user_avatar"
        app:layout_constraintBottom_toBottomOf="@id/user_avatar"
        android:layout_marginEnd="20dp"
        android:layout_width="34dp"
        android:layout_height="34dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewDevices"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtRemoveDevice"
        android:visibility="gone"
        android:text="Gỡ kết nối"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/purple"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewDevices"
        app:layout_constraintStart_toStartOf="@id/recyclerViewDevices"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>